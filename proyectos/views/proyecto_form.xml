<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_proyecto_form" model="ir.ui.view">
            <field name="name">proyectos.proyecto.form</field>
            <field name="model">proyectos.proyecto</field>
            <field name="arch" type="xml">
                <form string="Proyecto">
                    <header>
                        <button string="Informe Proyecto" type="action" name="%(proyectos.action_project_report)d"/>
                    </header>
                    <sheet>
                        <notebook>
                            <page string="InformaciÃ³n General">
                                <group>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="manager_id"/>
                                    <field name="state"/>
                                    <field name="state" widget="statusbar"/>
                                    <field name="priority"/>
                                </group>
                            </page>
                            <page string="Presupuesto y Usuarios">
                                <group>
                                    <field name="budget"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                            <page string="Tareas">
                                <field name="task_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="state"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="description"/>
                                            <field name="state"/>
                                            <field name="state" widget="statusbar"/>
                                            <field name="start_date"/>
                                            <field name="due_date"/>
                                            <field name="priority"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <button string="Informe Proyecto" type="action" name="%(proyectos.action_project_report)d" class="oe_inline"/>
                    </sheet>
                </form>
            </field>
        </record>        
    </data>
</odoo>